# Configuración de botones
<CustomButton@Button>:
    background_color: "#2926F4"
    color: 1, 1, 1, 1
    border: (1, 1, 1, 1)
    background_normal: ''
    background_down: ''
    canvas.before:
        Color:
            rgba: (0.16, 0.15, 0.95, 1)  
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: (1, 1, 1, 1)  
        Line:
            width: 2
            rectangle: (self.x, self.y, self.width, self.height)

# Pantalla Home
<HomeScreen>:
    name: "home"
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: (0.75, 0.85, 1, 1)  
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Tabla de Mercaderias/Productos"
            font_size: 32
            color: 0, 0, 0, 1

        Label:
            text: "ID     Producto      Cantidad      Costo   Precio_venta    Proveedor   Categoria"
            font_size: 28
            color: 0, 0, 0, 1
                
        BoxLayout:
            size_hint: (1, None)
            height: 500  # Ajusta según lo necesario
            GridLayout:
                id: product_grid
                cols: 1
                spacing: 50
                size_hint_y: None
                height: self.minimum_height

        CustomButton:
            text: "Volver al Menú"
            on_press: root.manager.current = 'menu'

# Pantalla de Alta
<AltaScreen>:
    name: "alta"
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: (0.75, 0.85, 1, 1)  
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Agregar Nuevo Producto"
            font_size: 32
            color: 0, 0, 0, 1
        TextInput:
            id: producto
            hint_text: "Nombre del Producto"
        TextInput:
            id: cantidad
            hint_text: "Cantidad"
            input_filter: 'int'
        TextInput:
            id: costo
            hint_text: "Costo"
            input_filter: 'float'
        TextInput:
            id: precio_venta
            hint_text: "Precio de Venta"
            input_filter: 'float'
        TextInput:
            id: proveedor
            hint_text: "Proveedor"
        TextInput:
            id: categoria
            hint_text: "categoria"
        CustomButton:
            text: "Agregar Producto"
            on_press:
                root.agregar_producto(producto.text, cantidad.text, costo.text, precio_venta.text, proveedor.text, categoria.text)
        CustomButton:
            text: "Volver al Menú"
            on_press: root.manager.current = 'menu'

